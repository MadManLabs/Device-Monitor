<h1>Devices</h1><br />
<div id="search">
  Search: <input type="text" name="search_field" id="search_field" />
  <span id="search_message"><span id="remove"></span>X</span>
</div>
<table id='devices'>
  <tr>
    <th>Name</th>
    <th>IP Address</th>
    <th>Port</th>
    <th>State</th>
    <th>Last Checked</th>
  </tr>
  <% @devices.each do |device| %>
    <tr id="<%= dom_id(device) %>" class="<%= device.last_state ? 'up' : 'down' %>">
      <td class="name"><%= device.name %></td>
      <td class="ip"><%= device.ip %></td>
      <td class="port"><%= device.port %></td>
  	  <td class="last_state"><%= device.last_state %></td>
  	  <td class="last_checked"><%= device.last_checked %></td>
  	  <td width="30"><%= link_to "Edit", edit_device_path(device) %></td>
    </tr>
  <% end %>
</table>
<span id="folder_sort">View by folder: <%= select("folder", "id", options_from_collection_for_select(@folders, 'id', 'name'), {:include_blank => true}, :id => 'folder_view') %></span>
<span id="device_page"></span>
